<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="@drawable/white_selector">


    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/first_event_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:lines="2"
        android:layout_weight="0.25"
        android:textSize="@dimen/xsmall_text_size"
        android:gravity="center"
        android:ellipsize="end"
        android:minHeight="48dp"
        android:padding="2dp"
        app:font="@string/light_font_name"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/darker_grey"/>

    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/second_event_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:lines="2"
        android:layout_weight="0.25"
        android:gravity="center"
        android:textSize="@dimen/xsmall_text_size"
        android:ellipsize="end"
        android:minHeight="48dp"
        android:padding="2dp"
        app:font="@string/light_font_name"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/darker_grey"/>

    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/third_event_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:lines="2"
        android:layout_weight="0.25"
        android:textSize="@dimen/xsmall_text_size"
        android:gravity="center"
        android:ellipsize="end"
        android:minHeight="48dp"
        android:padding="2dp"
        app:font="@string/light_font_name"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/darker_grey"/>

    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/status_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:lines="2"
        android:layout_weight="0.25"
        android:textSize="@dimen/xsmall_text_size"
        android:gravity="center"
        android:ellipsize="end"
        android:minHeight="48dp"
        android:padding="2dp"
        app:font="@string/light_font_name"/>
</LinearLayout>