<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="48dp"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/current_tei_relationship_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        app:font="@string/regular_font_name" />
    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:textSize="@dimen/small_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/of"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:font="@string/regular_font_name" />
    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:textSize="@dimen/small_text_size"
        android:id="@+id/relative_relationship_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/link"
        android:inputType="text"
        app:font="@string/regular_font_name" />
    </LinearLayout>

    <Button
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/delete_relationship"
        android:text="X"
        android:background="@drawable/rounded_imagebutton_red" />

</LinearLayout>