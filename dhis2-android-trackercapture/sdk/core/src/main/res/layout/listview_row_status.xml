<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_blue"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1">

    <include layout="@layout/listview_row_info_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <org.hisp.dhis.android.sdk.ui.views.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="@string/event_status"
            android:textSize="@dimen/medium_text_size"
            app:font="@string/condensed_font_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/complete"
                android:text="@string/complete"
                android:background="@drawable/rounded_imagebutton_orange"/>

            <Button
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/validate"
                android:text="@string/validate"
                android:visibility="gone"
                android:background="@drawable/rounded_imagebutton_teal"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>