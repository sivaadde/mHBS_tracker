<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="720dp"
    android:weightSum="1">

    <org.hisp.dhis.android.sdk.ui.views.FontTextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/large_text_size"
        android:text="@string/validation_compulsory_error"
        app:font="@string/medium_font_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darker_grey"/>

    <ListView
        android:id="@+id/simple_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/ok_option"
        android:id="@+id/closebutton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>